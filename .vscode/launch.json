    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: acme create",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/acme_project_create/_main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "justMyCode": true,
            "args": [
                "-target-dir",
                "${workspaceFolder}/data",
                "-project-name",
                "hello-world",
                "--template-dir-path",
                "${workspaceFolder}/src/acme_project_create/template",
                "-desc",
                "Hello World",
                "-package-name",
                "hello_world",
                "-owner-email",
                "name@example.com",
                "-command-name",
                "hw"
            ],
        }
    ]
}